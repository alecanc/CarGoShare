<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ricerca.CarFragment">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/colore_sfondo"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/indietro"
                    android:layout_width="75dp"
                    android:layout_height="71dp"
                    android:clickable="true"
                    android:background="@drawable/backarrow"
                    android:backgroundTint="@color/teal_700"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.122"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.209" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:src="@drawable/panda"
android:id="@+id/fotomacchina"

                    android:layout_margin="30dp"
                    ></ImageView>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:isIndicator="false"
                    android:stepSize="1"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/preferita"
                    ></RatingBar>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/marca"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="Ferrari"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/modello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="4"
                    android:fontFamily="@font/poppins"
                    android:text="234"

                    android:textColor="@color/black"
                    android:textSize="22dp" />


                <TextView
                    android:id="@+id/tariffa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="4234"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/euro1"
                    android:drawablePadding="5dp"
                    android:textSize="22dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"

                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/targa"
                        android:textColor="@color/black"
                        android:textSize="20sp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        tools:text="13AO19"
                        android:layout_marginStart="7dp"
                        android:textStyle="bold"
                        android:id="@+id/targa"
                        android:textColor="@color/black"
                        android:textSize="20sp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/anno_car"

                        android:textColor="@color/black"
                        android:textSize="20sp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        tools:text="2010"
                        android:layout_marginStart="7dp"
                        android:id="@+id/anno"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/indirizzo"
                        android:textColor="@color/black"
                        android:textSize="20sp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        tools:text="Via Circe 70"
                        android:id="@+id/indirizzo"
                        android:textStyle="bold"
                        android:layout_marginStart="7dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/cittÃ "
                        android:textColor="@color/black"
                        android:textSize="20sp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        tools:text="Palermo"
                        android:id="@+id/citta"
                        android:layout_marginStart="7dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"></TextView>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="5sp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numPosti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/person_seat"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/poppins"
                    tools:text="3"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/cambio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/manualtransmission"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/poppins"
                    tools:text="automatico"
                    android:textColor="@color/black"
                    android:textSize="18sp"

                    />

                <TextView
                    android:id="@+id/tipologia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/electricity"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/poppins"
                    tools:text="hybrida"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/colore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/palette"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/poppins"
                    tools:text="bianca"
                    android:textColor="@color/black"

                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="1sp"
                    android:background="@drawable/button_background"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/button_background"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"

                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/profilo1"
                    android:id="@+id/prof"
                    >

                </de.hdodenhof.circleimageview.CircleImageView>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:progressTint="#9F8704"
                    android:rating="3"
                    android:id="@+id/ratingBar"
                    >

                </RatingBar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="20sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"

                        android:id="@+id/nome_p"
                        android:text="Alessia"
                        android:textColor="@color/black"
                        android:textSize="24dp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins"
                        android:id="@+id/cognome_p"
                        android:text="Cancemi"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="24dp">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="20sp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/telefono">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:id="@+id/numero_tel"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="7sp"
                        android:fontFamily="@font/poppins"
                        tools:text="328746352">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:fontFamily="@font/poppins"
                        android:layout_marginStart="20sp"
                        android:text="@string/email">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:fontFamily="@font/poppins"
                        android:id="@+id/email"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="7sp"
                        tools:text="cancemialessia@gmail.com">
                    </TextView>


                </LinearLayout>





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descrizione"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descrizione"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:padding="14dp"
                    android:background="@drawable/contorno"
                    ></TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:id="@+id/prenotaButton"
                    android:fontFamily="@font/poppins"
                    android:layout_margin="20sp"
                    android:background="@drawable/button_background"
                    android:text="Prenota"
                    android:textColor="#ffffff">

                </androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>