<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#505DB3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_margin="10dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EAE1EC"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="81dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="5dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_background"
                        android:orientation="vertical"
                        android:elevation="10dp">

                        <TextView
                            android:id="@+id/data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30sp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="30sp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:drawablePadding="10dp"
                            tools:text="data"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/calendar_small">

                        </TextView>

                        <TextView
                            android:id="@+id/orario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30sp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="30sp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            tools:text="orario"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/schedule_fill0_wght400_grad0_opsz48"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/annulla"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@drawable/custom_editext"
                            android:backgroundTint="#8D5697"
                            android:fontFamily="@font/poppins"
                            android:text="Annulla"
                            android:textColor="@color/white"
                            app:cornerRadius="10dp">

                        </androidx.appcompat.widget.AppCompatButton>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_editext"
                android:backgroundTint="#505DB3"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/marca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Ferrari" />

                <TextView
                    android:id="@+id/modello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="123" />


                <TextView
                    android:id="@+id/anno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="2008" />

                <TextView
                    android:id="@+id/id_prenotazione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    tools:text="ID" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>